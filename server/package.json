  "version": "0.0.1",
  "description": "socket-io server for elder sign companion",
  "main": "main.ts",
  "scripts": {
    "dev:ui": "cd ../client && npm run dev && cd ../",
    "dev:server": "NODE_ENV=development nodemon ./src/main.ts",
