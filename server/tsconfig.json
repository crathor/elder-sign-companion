{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "rootDir": "./src",
        "allowJs": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": false,
        "strict": true,
        "skipLibCheck": true,
        "sourceMap": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "public"]
}
